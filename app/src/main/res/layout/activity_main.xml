                android:textColor="#000000"
                android:layout_marginBottom="10dp"
                android:id="@+id/valor_venta_max"
                android:tag="valor"
                />

        </RelativeLayout>



    </android.support.v7.widget.CardView>
        <TextView
            android:layout_width="match_parent"
