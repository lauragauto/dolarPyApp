                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_below="@+id/titulo_venta_al"
                android:layout_marginLeft="200dp"
                android:text="0"
                android:layout_marginBottom="10dp"
                android:textColor="#000000"
                android:id="@+id/valor_venta_al"
                android:tag="valor"
                />

        </RelativeLayout>



    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView

        android:elevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_alberdi"
        android:id="@+id/card_maxi"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Maxi Cambios"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="60dp"
                android:tag="casa_nombre"
                android:textColor="#000000"
                android:textStyle="bold"
                android:id="@+id/nombre_casa"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_below="@+id/nombre_casa"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="60dp"
                android:text="COMPRA"
                android:textColor="#166734"
                android:layout_marginBottom="10dp"
                android:id="@+id/titulo_compra"
                android:tag="tipo"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_below="@+id/nombre_casa"

                android:layout_marginLeft="200dp"
                android:text="VENTA"
                android:layout_marginBottom="10dp"
                android:id="@+id/titulo_venta"
                android:textColor="#166734"
                android:tag="tipo"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_below="@+id/titulo_compra"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="60dp"
                android:text="0"
                android:layout_marginBottom="10dp"
                android:id="@+id/valor_compra_max"
                android:textColor="#000000"
