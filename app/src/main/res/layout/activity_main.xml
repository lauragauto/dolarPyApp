        android:id="@+id/main_swipe">



<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:id="@+id/container_linear">
<android.support.v7.widget.CardView

    android:elevation="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:id="@+id/card_chaco"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Cambios Chaco"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textColor="#000000"
            android:layout_marginLeft="60dp"
            android:id="@+id/nombre_casa_ch"
            android:tag="casa_nombre"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_below="@+id/nombre_casa_ch"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="60dp"
            android:text="COMPRA"
            android:textColor="#166734"
            android:layout_marginBottom="10dp"
            android:id="@+id/titulo_compra_ch"
            android:tag="tipo"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_below="@+id/nombre_casa_ch"
            android:layout_marginLeft="200dp"
            android:text="VENTA"
            android:textColor="#166734"
            android:layout_marginBottom="10dp"
            android:id="@+id/titulo_venta_ch"
            android:tag="tipo"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_below="@+id/titulo_compra_ch"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="60dp"
            android:text="0"
            android:textColor="#000000"
            android:layout_marginBottom="10dp"
            android:id="@+id/valor_compra_ch"
            android:tag="valor"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_below="@+id/titulo_venta_ch"
            android:layout_marginLeft="200dp"
            android:text="0"
            android:textColor="#000000"
            android:layout_marginBottom="10dp"
            android:id="@+id/valor_venta_ch"
            android:tag="valor"
            />

    </RelativeLayout>



    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView

        android:elevation="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_chaco"
        android:id="@+id/card_alberdi"
        android:layout_marginBottom="5dp"


        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
